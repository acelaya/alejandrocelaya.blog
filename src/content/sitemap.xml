---
permalink: sitemap.xml
---

<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    <url>
        <loc>{{ site.url }}</loc>
        <lastmod>{{ site.time | date('c') }}</lastmod>
        <changefreq>daily</changefreq>
        <priority>0.8</priority>
    </url>
    {% for post in site.posts %}
        <url>
            <loc>{{ site.url }}{{ post.url }}/</loc>
            <lastmod>{{ post.date | date('c') }}</lastmod>
            <changefreq>weekly</changefreq>
            <priority>1.0</priority>
        </url>
    {% endfor %}
    <url>
        <loc>{{ site.url }}/tags/</loc>
        <lastmod>{{ site.time | date('c') }}</lastmod>
        <changefreq>weekly</changefreq>
        <priority>0.7</priority>
    </url>
    <url>
        <loc>{{ site.url }}/categories/</loc>
        <lastmod>{{ site.time | date('c') }}</lastmod>
        <changefreq>weekly</changefreq>
        <priority>0.7</priority>
    </url>
    {% set tagList = [] %}
    {% for tag in site.tags %}
        {% for post in tag %}
            {% for tagName in post.tags %}
                {% if tagName not in tagList %}
                    {% set tagList = tagList | merge([tagName]) %}

                    <url>
                        <loc>{{ site.url }}/tag/{{ tagName | url_encode(true) }}/</loc>
                        <lastmod>{{ site.time | date('c') }}</lastmod>
                        <changefreq>weekly</changefreq>
                        <priority>0.8</priority>
                    </url>
                {% endif %}
            {% endfor %}
        {% endfor %}
    {% endfor %}
    {% set categoryList = [] %}
    {% for category in site.categories %}
        {% for post in category %}
            {% for categoryName in post.categories %}
                {% if categoryName not in categoryList %}
                    {% set categoryList = categoryList | merge([categoryName]) %}

                    <url>
                        <loc>{{ site.url }}/category/{{ categoryName | url_encode(true) }}/</loc>
                        <lastmod>{{ site.time | date('c') }}</lastmod>
                        <changefreq>weekly</changefreq>
                        <priority>0.8</priority>
                    </url>
                {% endif %}
            {% endfor %}
        {% endfor %}
    {% endfor %}

</urlset>
