<!DOCTYPE html>
<html class="js">
    <head>
        <title>{% block title %}{{ site.title }} &mdash; {{ site.subtitle }}{% endblock %}</title>

        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="{{ site.title }} &mdash; {{ site.subtitle }}">
        <meta name="theme-color" content="#2a2d36">
        {% block meta %}
            <meta property="og:title" content="{{ site.title }} &mdash; {{ site.subtitle }}" />
            <meta property="og:type" content="development" />
            <meta property="og:url" content="{{ site.url }}/" />
            <meta property="og:image" content="{{ site.url }}/assets/img/hero_bg.jpg" />
        {% endblock %}

        <link rel='stylesheet' href='https://fonts.googleapis.com/css?family=Roboto:400,100,300,600,400italic,700'>
        <!-- build:css /assets/css/main.min.css?v -->
        <link href="/assets/css/animate.css" rel="stylesheet" type="text/css" />
        <link href="/assets/css/icomoon.css" rel="stylesheet" type="text/css" />
        <link href="/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
        <link href="/assets/css/highlightjs-github.min.css" rel="stylesheet" />
        <link href="/assets/css/bootstrap-social.css" rel="stylesheet" type="text/css" />
        <link href="/assets/css/style.css" rel="stylesheet" type="text/css" />
        <!-- /build -->

        <link rel="alternate" type="application/atom+xml" href="{{ site.url }}/atom.xml" title="{{ site.title }} activity feed" />
    </head>
    <body>
        <!-- Loader -->
        <div class="fh5co-loader"></div>

        <div id="fh5co-page">
            {% include 'header.html.twig' %}

            <section id="fh5co-hero" class="no-js-fullheight" style="background-image: url(/assets/img/hero_bg.jpg);" data-next="yes">
                <div class="fh5co-overlay"></div>
                <div class="container">
                    <div class="fh5co-intro no-js-fullheight">
                        <div class="fh5co-intro-text">
                            {% block heroTitle %}
                                <div class="fh5co-center-position">
                                    <h2 class="animate-box"><a style="color: #fff;" href="/">{{ site.title }}</a></h2>
                                    <h3 class="animate-box">
                                        {{ site.subtitle }}.
                                    </h3>
                                </div>
                            {% endblock %}
                        </div>
                    </div>
                </div>
                <div class="fh5co-learn-more animate-box">
                    <a href="#" class="scroll-btn">
                        <span class="arrow"><i class="icon-chevron-down"></i></span>
                    </a>
                </div>
            </section>

            {% block content_wrapper %}
                <div id="fh5co-faqs">
                    <div class="container">
                        <div class="row">
                            {% block content %}
                                {{ page.content }}
                            {% endblock %}
                        </div>
                    </div>
                </div>
            {% endblock %}

            {% include 'footer.html.twig' %}
        </div>

        <!-- build:js /assets/js/main.min.js?v -->
        <script src="/assets/js/jquery.min.js"></script>
        <script src="/assets/js/bootstrap.min.js"></script>
        <script src="/assets/js/jquery.easing.1.3.js"></script>
        <script src="/assets/js/jquery.waypoints.min.js"></script>
        <script src="/assets/js/lunr.min.js"></script>
        <script src="/assets/js/mustache.js"></script>
        <script src="/assets/js/uri.min.js"></script>
        <script src="/assets/js/jquery.lunr.search.js"></script>
        <script src="/assets/js/highlight.pack.js"></script>
        <script src="/assets/js/acelayablog.js"></script>
        <script src="/assets/js/main.js"></script>
        <!-- /build -->

        {% if site.google_analytics_tracking_id %}
            <script type="text/javascript">
                var _gaq = _gaq || [];
                _gaq.push(['_setAccount', '{{ site.google_analytics_tracking_id }}']);
                _gaq.push(['_trackPageview']);

                (function() {
                    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
                    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
                    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
                })();
            </script>
        {% endif %}
    </body>
</html>
