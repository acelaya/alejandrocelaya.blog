---
import Link from '../Link';
import { Post, summaryForPost } from '../../utils/posts';

export interface Props {
  post: Post;
}

const { post } = Astro.props;
const summary = await summaryForPost(post);
---

<article>
  <dl>
    <dt class="entry-title"><Link href={post.url ?? ''} rel="bookmark">{post.data.title}</Link></dt>
    <dd class="entry-summary">
      <p>{summary}</p>
    </dd>
  </dl>
</article>
